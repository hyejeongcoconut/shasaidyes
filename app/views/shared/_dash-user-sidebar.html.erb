
<div id="mySidebar" class="sidebar">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
  <h1>Welcome,</h1>
  <h1><%= @user.first_name.capitalize %></h1>
  <br>
  <div class="d-flex justify-content-around mb-4">
    <%= image_tag @user.photo, class: "avatar-prof" %>
  </div>
  <div class="dash-menu">
  <a href="#">About</a>
  <a href="#">Services</a>
  <a href="#">Clients</a>
  <a href="#">Contact</a>
  </div>
</div>


<div class="sidebar-open" onclick="openNav()">
<h4>▶ Dashboard Menu</h4>
</div>



<script>
function openNav() {
  document.getElementById("mySidebar").style.width = "250px";
  document.querySelector(".dash-main").style.marginLeft = "250px";
  document.querySelector(".navbar").style.marginLeft = "200px";
}

function closeNav() {
  document.getElementById("mySidebar").style.width = "0";
  document.querySelector(".dash-main").style.marginLeft= "110px";
  document.querySelector(".navbar").style.marginLeft = "0";
}
</script>