<div class="modal fade" data-controller="modal" data-target="vendor-modal.modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Generate a quote</h5>
        <button type="button" class="close" data-action="click->modal#close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h5>Customer ID</h5>
        <p data-target="modal.user_id"></p>
        <h5>Customer Name</h5>
        <p data-target="modal.user_name"></p>
        <h5>Vendor ID</h5>
        <p data-target="modal.vendor_id"></p>
        <div class="form-group">
          <label for="list_of_services">List of services</label>
          <input type="text" class="form-control" id="list_of_services">
        </div>
        <div class="form-group">
          <label for="date">Date</label>
          <input type="date" class="form-control" id="date">
        </div>
        <div class="form-group">
          <label for="total_price">Total price</label>
          <input type="number" class="form-control" id="total_price">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" data-action="click->modal#close">Close</button>
        <button type="button" class="btn btn-primary" data-action="click->modal#createQuote">Save changes</button>
      </div>
    </div>
  </div>
</div>
