<%= render 'shared/dash-vendor-sidebar' %>


<div class="dash-main">
  <h2>Vendor Dashboard</h2>
  <div class="row">
  <div class="col-xs-12 col-md-6">
    <div class="my-products">
      <h2>My Products</h2>
        <% if @products.present? %>
          <% @products.each do |product| %>
            <p><%= product.name %> | 
            <%= link_to "Product Details", vendor_product_path(product) %> </p>
          <% end %>
        <% end %>
      <div class="products">
        <%= link_to "Add new products", new_vendor_product_path %>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-md-6">
    <div class="client-messages">
      <h2>My Clients</h2>
    </div>
  </div>
</div>
</div>