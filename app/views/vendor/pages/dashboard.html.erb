<%= render 'shared/dash-vendor-sidebar' %>
<div class="dash-main">
  <h2>Vendor Dashboard</h2>
  <div class="row">

  <div class="col-xs-12 col-md-6">
    <div class="my-products" data-controller="product-modal">
      <h2>My Products</h2>
      <%= link_to "Add new products", new_vendor_product_path %>
        <% if @products.present? %>
          <% @products.each do |product| %>
            <p><%= product.name %>
            <button
                class="sha-green-btn"
                data-action="click->product-modal#launchProductDeets"
                data-product="<%=product.id%>"
                data-product_name="<%= product.name %>"
                data-product_price="<%=product.price%>"
                data-product_description="<%=product.description%>"
                data-product_category="<%=product.category%>"
                >Product Details</button> 
                <%= link_to "Edit Product", edit_vendor_product_path(product), class:"sha-mustard-btn" %>
                </p>
          <% end %>
        <% end %>
        
        <%= render 'shared/product_modal' %>

        

    </div>
  

  <div class="col-xs-12 col-md-6">
    <div class="client-messages" data-controller="vendor-modal">
      <h2>My Clients</h2>
      <% @favorites.each do |favorite| %>
        <div data-target="model.openmodal">
          <p><%= favorite.user.first_name %> <%= favorite.user.last_name %>
            <a href="#" class="btn btn-danger">Chat now !</a>
            <button href="#"
                    class="btn btn-success"
                    data-action="click->vendor-modal#launchModal"
                    data-user_id="<%= favorite.user_id %>"
                    data-user_name="<%= favorite.user.first_name %>"
                    data-vendor_id="<%= favorite.vendor_id %>"
                    data-quote_id="<%= favorite.vendor.quotes.first.id %>">Generate quote!</button>
            <% if favorite.vendor.quotes.first.booked == 0  %>
              <button class="btn btn-warning">Quote has not send</button></p>
            <% else %>
              <button class="btn btn-success">Payed</button></p>
            <% end %>
        </div>
      <% end %>
      <%= render 'shared/vendor_modal' %>
    </div>
  </div>

</div>
</div>
</div>
