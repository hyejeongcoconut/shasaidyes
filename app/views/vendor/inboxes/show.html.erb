<h1>#<%= @inbox.name %></h1>
<div id="messages" data-inbox-id="<%= @inbox.id %>">
  <% @inbox.messages.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.sender.name%></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.content %></p>
      <% if message.photo.present? %>
        <%= cl_image_tag message.photo.key, height: 300, wdith: 'auto', crop: :fill %>
      <%end%>
    </div>
  <% end %>
</div>
<%= simple_form_for [:vendor, @inbox, @message ],remote:true,authenticity_token: true do |f| %>
  <%= f.input :content, label: false, placeholder: "Message ##{@inbox.name}" %>
  <%= f.input :photo, as: :file %>
  <div class="form-actions form-btn-wrap d-flex justify-content-around">
    <%= f.submit "submit", class: 'sha-btn'%>
  </div>
<% end %>