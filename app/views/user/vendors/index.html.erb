    <input class="form-control string required"
                   type="text"
                   data-action="keydown->search#greetWithKeyboard"
    name="search[query]" id="search_query" />
    <button class="btn btn-flat" data-action="click->search#refresh">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
  <h1>Vendors Index</h1>
  <div data-target="search.result" id="search_div">
  </div>
</div>
