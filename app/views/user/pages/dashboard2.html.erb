<div class="content-wrap mt-4 dash-wrap">
  <div class="row">
    <div class="col-xs-12 col-lg-3">
      <div class="dash-u-sidebar d-flex align-items-center">
        <div class="dash-user">
          <h1>Welcome, <%= @user.first_name.capitalize %></h1>
          <br>
          <%= image_tag @user.photo, class: "avatar-prof" %>
          <div class="dash-user-menu">
            <h3>HMM?</h3>
            <h3>will this work?</h3>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-lg-9">
      <div class="dash-u-main">
      
      <div class="row">

        <div class="col-xs-12 col-lg-7">
          <div class="main-fav">
          <h2>My Favorite Vendors</h2>
          <% @favorites.each do |favorite| %>
            <div class="fav-vendor-wrap d-flex align-items-center justify-content-between">

              <div class="fav-names">
              <%= link_to user_vendor_path(favorite.vendor.id) do %>
              <h4 id="fav-v-name"><%= favorite.vendor.name.capitalize %></h4>
              <%end%>
              <p>(<%= favorite.vendor.category.capitalize %>) </p>
              </div>

              <div class="fav-options">
              <a href="#" class="sha-mustard-btn">Chat now</a>
              <a href="#" class="sha-green-btn" >Invoice</a>
              <%= link_to "Remove",
                user_favorite_vendor_path(favorite),
                class: "sha-btn-outline",
                method: :delete,
                data: { confirm: "Are you sure?" } %>
              </div>
            </div>
          <% end %>
          </div>
        </div>

        <div class="col-xs-12 col-lg-5">
          <div class="main-guest">
          <div class="d-flex align-items-center justify-content-between">
            <h2>My Guest List</h2>
          </div>
          
          <% @guests.each do |guest| %>
          <div class="row guest-options align-items-center">
            <%# <div class="fav-vendor-wrap d-flex align-items-center justify-content-between"> %>
            <div class="col-xs-12 col-lg-8">
              <h4><%= guest.first_name.capitalize %> <%= guest.last_name.capitalize %></h4>
            </div>
            <div class="col-xs-12 col-lg-4">
              <%# <div class="guest-options"> %>
              <%= link_to "Guest Details",user_guest_path(guest.id), class: 'sha-green-btn' %>
              <%# </div> %>
            </div>
            <%# </div> %>
            </div>
          <% end %>
          
          <%= link_to "Add guest",new_user_guest_path, class: 'sha-btn-outline-md d-flex justify-content-around' %>
          </div>
        </div>


      </div>
      </div>
    </div>
  </div>
</div>


