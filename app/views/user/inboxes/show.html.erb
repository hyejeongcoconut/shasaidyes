<h1>#<%= @inbox.name %></h1>
<div id="messages" data-inbox-id="<%= @inbox.id %>">
  <% @inbox.messages.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.sender.nickname %></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>
<%= simple_form_for [:user, @inbox, @message ] do |f| %>
  <%= f.input :content, label: false, placeholder: "Message ##{@inbox.name}" %>
  <div class="form-actions form-btn-wrap d-flex justify-content-around">
    <%= f.submit "submit", class: 'sha-btn'%>
  </div>
<% end %>